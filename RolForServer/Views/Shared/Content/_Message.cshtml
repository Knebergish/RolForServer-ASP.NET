@using RolForServer.Models
@model RolForServer.Models.Entities.Message

@{
	var user = UsersRepository.Get(Model.UserId);
}
<div id="@Html.Raw("message-" + Model.Id)" class="message-anchor"></div>
<div class="message">
	<div class="message-header">
		@Html.Raw(Model.Date.ToString(DateFormat.DateFormatString)) в @Html.Raw(Model.Date.ToString(DateFormat.TimeFormatString))
	</div>
	<div class="message-body">
		<div class="message-user-info">
			<a href="" class="message-user-name blue-link">@Html.Raw(user?.Name)</a>
			<img src="/Content/Images/Avatars/@Html.Raw(user?.AvatarImageName)"
				alt="avatar-image"
				class="user-avatar">
			<div class="user-description">
				<details class="spoiler-button">
					<summary>Описание</summary>
				</details>
				<div class="spoiler-text">
					@Html.Raw(user?.Description)
				</div>
			</div>
		</div>
		<div class="message-content">
			@Html.Raw(Model.Text)
		</div>
	</div>
</div>