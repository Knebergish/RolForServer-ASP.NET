<div class="toolbar-tool toolbar-tool-right popup-parent user-info-tool">
	@if (IsAuthenticated) {
		var user = User;
		<a href="" class="cyan-link">
			@Html.Raw(user.Name)
			<img src="/Content/Images/Avatars/@Html.Raw(user.AvatarImageName)" class="user-info-tool-min-avatar" alt="user-info-min-avatar">
		</a>
		<div class="popup user-info-tool-popup">
			@Html.Partial("_UserInfo")
		</div>
	}
	else {
		<a href="@Url.Action("Login", "Auth")" class="cyan-link">Войти</a>
	}
</div>