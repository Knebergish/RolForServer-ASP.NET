@using RolForServer.Models

<!DOCTYPE html>

<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>@ViewBag.Forum.Title</title>
	<link href="/Content/CSS/layout.css" rel="stylesheet" type="text/css">
	<link href="/Content/CSS/style.css" rel="stylesheet" type="text/css">
	<link href="/Content/CSS/toolbar/toolbar.css" rel="stylesheet" type="text/css">
	<link href="/Content/CSS/toolbar/user-info.css" rel="stylesheet" type="text/css">
	<link href="/Content/CSS/toolbar/menu.css" rel="stylesheet" type="text/css">
	<link href="/Content/CSS/sidebar/sidebar.css" rel="stylesheet" type="text/css">
	<link href="/Content/CSS/content/forum.css" rel="stylesheet" type="text/css">
	<link href="/Content/CSS/content/wedro.css" rel="stylesheet" type="text/css">
	<link href="/Content/CSS/footer.css" rel="stylesheet" type="text/css">
	<link href="/Content/CSS/fonts.css" rel="stylesheet" type="text/css">
	<link href="/Content/CSS/to-top-button.css" rel="stylesheet" type="text/css">
</head>
<body>
	<div id="toolbar">
		<div class="toolbar-item toolbar-tool-left popup-parent menu">
			<div class="cyan-link">Инструменты</div>
			<div class="popup">
				<ul>
					<li>
						<a href="" class="cyan-link">Первый пункт меню</a>
					</li>
					<li>
						<a href="" class="cyan-link">Делай два</a>
					</li>
					<li>
						<a href="" class="cyan-link">Делай три</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="toolbar-item toolbar-tool-right popup-parent user-info">
			<a href="" class="cyan-link">
				Аллар Кнебергиш
				<img src="/Content/Images/Avatars/Imperial_Fists_150x150.gif" class="user-info-min-avatar" alt="user-info-min-avatar">
			</a>
			<div class="popup user-info-popup">
				<img src="/Content/Images/Avatars/Imperial_Fists_150x150.gif" class="user-info-avatar" alt="user-info-avatar">
				<ul>
					<li>
						<a href="" class="cyan-link user-name">Аллар Кнебергиш</a>
					</li>
					<li>
						<span class="user-role">Администратор</span>
					</li>
					<li>
						<a href="" class="cyan-link">Выход</a>
					</li>
				</ul>
			</div>
		</div>
	</div>

	<div id="wrapper">
		<div id="secondary">
			<div id="sidebar">
				<div id="site-header">
					<div id="site-header-title">
						<a href="@Url.Action("Index", "Home")" class="gray-link">RolFor</a>
					</div>
					<div id="site-header-description">
						Лучший игровой форум!
					</div>
				</div>
				<hr>
				<div class="menu-item">
					<a href="@Url.Action("Forums", "Home")" class="gray-link">Форумы</a>
				</div>
				<hr>
				<div class="menu-item">
					<a href="@Url.Action("Forum", "Home", new {id = 0})" class="gray-link">Какой-то форум</a>
				</div>
				<hr>
				<div class="menu-item">
					<a href="" class="gray-link">Пункт 3</a>
				</div>
				<hr>
				<div class="menu-item">
					<a href="" class="gray-link">Пункт с очень длинным текстом</a>
				</div>
				<hr>
			</div>
		</div>
		<div id="primary">
			<div id="content">
				<div id="forum">
					<h1 id="entry-title">@ViewBag.Forum.Title</h1>
					<div id="breadcrumb">
						<a href="@Url.Action("Forums", "Home")" class="breadcrumb-item blue-link">
							Форумы
						</a>
						<span class="breadcrumb-item">›</span>
						<span class="breadcrumb-item">
							<a href="@Url.Action("Forum", "Home", new {id = ViewBag.Forum.Id})" class="breadcrumb-item blue-link">
								@ViewBag.Forum.Title
							</a>
						</span>
					</div>
					<div id="messages">
						@foreach (Message message in ViewBag.Messages) {
							<div class="message">
								<div class="message-header">
									@Html.Raw(message.Date.ToString(DateFormat.DateFormatString)) в @Html.Raw(message.Date.ToString(DateFormat.TimeFormatString))
								</div>
								<div class="message-body">
									<div class="message-user-info">
										<a href="" class="message-user-name blue-link">@Html.Raw(RolForContext.Users.Find(message.UserId)?.Login)</a>
										<img src="/Content/Images/Avatars/@Html.Raw(RolForContext.Users.Find(message.UserId)?.AvatarImageName)"
											alt="avatar-image"
											class="user-avatar">
										<div class="user-description">
											<details class="spoiler-button">
												<summary>Описание</summary>
											</details>
											<div class="spoiler-text">
												@Html.Raw(RolForContext.Users.Find(message.UserId)?.Description)
											</div>
										</div>
									</div>
									<div class="message-content">
										@Html.Raw(message.Text)
									</div>
								</div>
							</div>
						}
					</div>
					<div id="pagination">
						<div id="pagination-items">
							<a href="" class="pagination-item page-number blue-link">1</a>
							<span class="pagination-item">…</span>
							<a href="" class="pagination-item page-number blue-link">13</a>
							<span class="pagination-item page-number-current">14</span>
						</div>
					</div>
					<div id="pagination-end"></div>
					<div id="answer-area">
						<p id="answer-area-title">Быстрый ответ:</p>
						<div id="wedro">
							<div id="tabs-switcher">
								<div id="visual-tab-indicator" class="selected-tab-indicator selected">Visual</div>
								<div id="html-tab-indicator" class="selected-tab-indicator">HTML</div>
							</div>
							<div id="functions-wrapper">
								<div id="bold-function-button" class="function-button">B</div>
								<div id="italic-function-button" class="function-button">I</div>
								<div id="underline-function-button" class="function-button">U</div>
							</div>
							<div class="clear"></div>

							<div id="tabs-wrapper">
								<div contentEditable="true" id="visual-tab" class="tab">
									Здесь <i>могла</i> быть <b>ваша</b> <u>реклама</u>.
								</div>
								<div contentEditable="true" id="html-tab" class="tab" hidden="">
									Когда-то и меня вела дорога приключений...
								</div>
							</div>
						</div>
						<div id="submit-wrapper">
							<button type="button" id="submit-button">Отправить</button>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div id="sidebar_back"></div>
		<div id="content_back"></div>
		<div id="clear"></div>
		<div id="footer">
			<p>Сайт написан с помощью рук и без мошенничества.</p>
			<p>Почта администратора сайта: какая_то@поч.та</p>
		</div>
	</div>
	<a id="to-top-button" title="Наверх">↑</a>
	<script src="/Scripts/toTopButton.js"></script>
	<script src="/Scripts/spoiler.js"></script>
	<script src="/Scripts/wedro.js"></script>
</body>
</html>