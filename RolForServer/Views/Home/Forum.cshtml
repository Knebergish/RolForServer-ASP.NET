@model RolForServer.Models.Messages

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Какой-то форум</title>
    <link href="~/css/layout.css" rel="stylesheet" type="text/css">
    <link href="~/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/css/toolbar/toolbar.css" rel="stylesheet" type="text/css">
    <link href="~/css/toolbar/user-info.css" rel="stylesheet" type="text/css">
    <link href="~/css/toolbar/menu.css" rel="stylesheet" type="text/css">
    <link href="~/css/sidebar/sidebar.css" rel="stylesheet" type="text/css">
    <link href="~/css/content/forum.css" rel="stylesheet" type="text/css">
    <link href="~/css/footer.css" rel="stylesheet" type="text/css">
    <link href="~/css/fonts.css" rel="stylesheet" type="text/css">
</head>
<body>
<div id="toolbar">
    <div class="toolbar-item toolbar-tool-left popup-parent menu">
        <div class="cyan-link">Инструменты</div>
        <div class="popup">
            <ul>
                <li>
                    <a href="" class="cyan-link">Первый пункт меню</a>
                </li>
                <li>
                    <a href="" class="cyan-link">Делай два</a>
                </li>
                <li>
                    <a href="" class="cyan-link">Делай три</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="toolbar-item toolbar-tool-right popup-parent user-info">
        <a href="" class="cyan-link">
            Аллар Кнебергиш
            <img src="~/images/Imperial_Fists_150x150.gif" class="user-info-min-avatar" alt="user-info-min-avatar">
        </a>
        <div class="popup user-info-popup">
            <img src="~/images/Imperial_Fists_150x150.gif" class="user-info-avatar" alt="user-info-avatar">
            <ul>
                <li>
                    <a href="" class="cyan-link user-name">Аллар Кнебергиш</a>
                </li>
                <li>
                    <span class="user-role">Администратор</span>
                </li>
                <li>
                    <a href="" class="cyan-link">Выход</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div id="wrapper">
    <div id="secondary">
        <div id="sidebar">
            <div id="site-header">
                <div id="site-header-title">
                    @HtmlHelperLinkExtensions.ActionLink(Html, "RolFor", "Index", new object(),
                        new {@class = "gray-link"})
                </div>
                <div id="site-header-description">
                    Лучший игровой форум!
                </div>
            </div>
            <hr>
            <div class="menu-item">
                @HtmlHelperLinkExtensions.ActionLink(Html, "Форумы", "Forums", new object(),
                    new {@class = "gray-link"})
            </div>
            <hr>
            <div class="menu-item">
                @HtmlHelperLinkExtensions.ActionLink(Html, "Какой-то форум", "Forum", new object(),
                    new {@class = "gray-link"})
            </div>
            <hr>
            <div class="menu-item">
                @HtmlHelperLinkExtensions.ActionLink(Html, "Пункт 3", "Index", new object(),
                    new {@class = "gray-link"})
            </div>
            <hr>
            <div class="menu-item">
                @HtmlHelperLinkExtensions.ActionLink(Html, "Пункт с очень длинным текстом", "Index", new object(),
                    new {@class = "gray-link"})
            </div>
            <hr>
        </div>
    </div>
    <div id="primary">
        <div id="content">
            <h1 id="entry-title">Название форума</h1>
            <div id="breadcrumb">
                @HtmlHelperLinkExtensions.ActionLink(Html, "Главная", "Index", new object(),
                    new {@class = "breadcrumb-item blue-link"})
                <span class="breadcrumb-item">›</span>
                <span class="breadcrumb-item">Какой-то форум</span>
            </div>
            <div id="messages">
                @using (HtmlHelperFormExtensions.BeginForm(Html)) {
                    foreach (var message in ViewBag.Messages.Topic) {
                        <div class="message">
                            <div class="message-header">
                                13.13.2013 в 13:13
                            </div>
                            <div class="message-body">
                                <div class="message-user-info">
                                    <a href="" class="message-user-name blue-link">Юзер с ОЧЕНЬ длинным именем</a>
                                    <img src="~/images/avatar.png"
                                         alt="avatar-image"
                                         class="user-avatar">
                                    <details class="user-description">
                                        <summary>Описание</summary>
                                        <div class="test">
                                            Ну тут можно описать что-то, что может пригодиться другим.
                                        </div>
                                    </details>
                                </div>
                                <div class="message-content">
                                    @Html.Raw(message.Text)
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div id="pagination">
                <a href="" class="pagination-item page-number blue-link">1</a>
                <span class="pagination-item">…</span>
                <a href="" class="pagination-item page-number blue-link">13</a>
                <span class="pagination-item page-number-current">14</span>
            </div>
        </div>
    </div>
    <div id="sidebar_back"></div>
    <div id="content_back"></div>
    <div id="clear"></div>
    <div id="footer">
        <p>Сайт написан с помощью рук и без мошенничества.</p>
        <p>Почта администратора сайта: какая_то@поч.та</p>
    </div>
</div>
</body>
</html>